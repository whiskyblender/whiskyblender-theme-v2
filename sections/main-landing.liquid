<section class="wb-overflow-hidden-x">
  <div class="wb-container">
    <div class="wb-videobg" style="background-image: url({{ section.settings.background_image | asset_url }})">
      <div class="wb-videograin"></div>
      <video autoplay muted loop id="wb-video">
        <source src="{{ section.settings.video_file | asset_url }}" type="video/mp4">
      </video>
    </div>
    <div class="wb-overvideo">
      <div class="wb-padding">
        <h1 class="wb-large-heading">{{ section.settings.title }}</h1>
        <p>{{ section.settings.description }}</p>
        <div class="wb-buttons">
          <a href="{{ section.settings.primary_button_url }}" class="wb-button wb-primary-button">
            {{- section.settings.primary_button_text -}}
          </a>
          <a href="{{ section.settings.secondary_button_url }}" class="wb-button">
            {{- section.settings.secondary_button_text -}}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Landing Hero",
  "settings": [
    {
      "type": "text",
      "id": "video_file",
      "label": "Video filename",
      "default": "wb-whisky-bow.mp4",
      "info": "Upload video to assets folder and enter filename here"
    },
    {
      "type": "text",
      "id": "background_image",
      "label": "Background image filename",
      "default": "wb-whisky-bow.jpg",
      "info": "Fallback image shown while video loads"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title text",
      "default": "Create something"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description text",
      "default": "When you're looking for that bottle of whisky nobody else has."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "Create something"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primary button URL"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Get a voucher"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary button URL"
    }
  ],
  "presets": [
    {
      "name": "Landing Hero"
    }
  ]
}
{% endschema %}
